!!!
html
  head
    title= "Vhosts"
    link(rel='stylesheet', href='/stylesheets/style.css')

    script
      window.boostrapdata = {}
      boostrapdata.vhosts = !{vhosts}

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
    script(src="javascripts/vendor/underscore.js")
    script(src="javascripts/vendor/backbone.js")
    script(src="javascripts/vendor/require.js", data-main="javascripts/app/main.js")

  body!= body

  script(type="text/template", id="vhost-template")  
      div="ServerName:"
        <%= vhost.get('ServerName') %>
      div="DocumentRoot:"
        <%= vhost.get('DocumentRoot') %>
      div="Directory:"
        <%= vhost.get('Directory') %>
      