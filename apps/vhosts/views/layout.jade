!!!
html
  head
    title= "Vhosts"
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    script
      window.boostrapdata = {}
      boostrapdata.vhosts = !{vhosts}

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
    script(src="javascripts/vendor/underscore.js")
    script(src="javascripts/vendor/backbone.js")
    script(src="javascripts/vendor/require.js", data-main="javascripts/app/main.js")

  body!= body

  script(type="text/template", id="vhost-template")
    h2.span12.servername
      <%= vhost.get('ServerName') %>
      span.label=""
    div.form
      form
        div.span6
            label.label="DocumentRoot"
            div.attribute.DocumentRoot
              span.badge=''
              | <input type="text" value="<%= vhost.get('DocumentRoot') %>" class="span6 documentroot" data-attribute="DocumentRoot"/> 
        div.span6
            label.label="Directory"
            div.attribute.Directory
              span.badge=''
              | <input type="text" value="<%= vhost.get('Directory') %>" class="span6 directory" data-attribute="Directory"/>
        div.span12
          label.label="Configdata"
          div.attribute.configdata
            span.badge=''
            textarea(class="configdata", data-attribute="configdata")
              <%= vhost.get('configdata') %>  
        div.clear
      submit.save.btn.btn-primary.disabled="Save"
      submit.save.btn.btn-danger.btn-small="Delete"
          
        